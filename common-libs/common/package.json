{
  "name": "@affinidi/common",
  "version": "2.2.0",
  "description": "Common utilities and types for Affinidi SDKs",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "npm run tsc",
    "start": "npm run build && node dist/index.js",
    "tsc": "tsc -p tsconfig-build.json",
    "lint": "eslint src test",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "cross-env NODE_ENV=test mocha -r ts-node/register test/unit/index.test.ts -p ./tsconfig.json --timeout 55000",
    "test:integration": "cross-env NODE_ENV=test mocha -r ts-node/register test/integration/index.test.ts -p ./tsconfig.build.json --timeout 115000",
    "test:coverage": "cross-env NODE_ENV=test nyc --reporter=lcov mocha -r ts-node/register test/unit/index.test.ts test/integration/index.test.ts -p ./tsconfig.json --timeout 55000",
    "test:coverage:codeclimate": "npm run test:coverage && [[ -s ./coverage/lcov.info ]] && $GITHUB_WORKSPACE/tmp/cc-test-reporter format-coverage -t lcov -o $GITHUB_WORKSPACE/tmp/codeclimate.common_li.json coverage/lcov.info --add-prefix $(pwd | rev | cut -d'/' -f-2 | rev) || echo \"lcov file is empty. There is no tests\"",
    "prepublishOnly": "npm run test && npm run lint",
    "checkLicenses": "license-checker --production --failOn 'AGPL 3.0;LGPL 2.1' --summary"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/affinityproject/affinidi-core-sdk.git",
    "directory": "common-libs/common"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "lib",
    "affinity",
    "common",
    "did"
  ],
  "author": "Denis Popov <denis.p@affinidi.com>",
  "contributors": [
    "Anton Iskryzhytskyi <anton.i@affinidi.com>",
    "Volodymyr Pavlyshyn <volodymyr.p@affinidi.com>"
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/affinityproject/affinidi-core-sdk/issues"
  },
  "homepage": "https://github.com/affinityproject/affinidi-core-sdk#readme",
  "dependencies": {
    "@affinidi/affinity-metrics-lib": "^0.0.25",
    "@affinidi/internal-api-clients": "^1.5.0",
    "@affinidi/platform-fetch": "^1.0.0",
    "@affinidi/tiny-lds-ecdsa-secp256k1-2019": "^1.1.1",
    "@affinidi/tools-common": "^1.0.4",
    "@affinidi/url-resolver": "^1.1.3",
    "@affinidi/vc-common": "^1.4.3",
    "base64url": "^3.0.1",
    "bip32": "^2.0.5",
    "browserify-aes": "^1.2.0",
    "create-hash": "^1.2.0",
    "did-resolver": "^2.0.1",
    "ethereumjs-util": "^5.0.0",
    "jsonld": "^4.0.1",
    "keccak256": "^1.0.0",
    "lodash.mapvalues": "^4.6.0",
    "lodash.merge": "^4.6.2",
    "multihashes": "^3.0.0",
    "randombytes": "^2.1.0",
    "secp256k1": "^4.0.1",
    "tiny-secp256k1": "^1.1.5",
    "tslib": "^2.2.0",
    "vc-revocation-list": "^3.0.0"
  },
  "devDependencies": {
    "@affinidi/eslint-config": "1.0.1",
